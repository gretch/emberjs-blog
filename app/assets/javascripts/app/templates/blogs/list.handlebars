<div class="commands">
  <a href="#" {{action "showNew"}}>New Blog Post</a>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
  {{#each blogs}}
    {{view App.ShowBlogView blogBinding="this"}}
  {{/each}}
  {{#if isNewVisible}}
    <tr>
      <td>*</td>
      <td>
        {{view App.NewBlogView}}
      </td>
    </tr>
  {{/if}}
  </tbody>
</table>
